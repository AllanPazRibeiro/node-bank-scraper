head
	link#bootstrap-css(href='//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css', rel='stylesheet')
	script(src='//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js')
	script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
	meta(charset='utf-8')
	meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
	link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
	title Itaú Scraper
style(type='text/css').
	@import url(https://fonts.googleapis.com/css?family=Raleway:300,400,600);
style.
	body {
		background: #262927;
	}
main.login-form 
		.cotainer
			.row.justify-content-center
				.col-md-8
						.card
							.card-header
								center Login Itaú
							.card-body
								form(action="/", method="post")
									.form-group.row
										label.col-md-4.col-form-label.text-md-right(for='branch') 
											| Agência
										.col-md-6
											input#username.form-control(type='text', name='branch', required='', autofocus='')
									.form-group.row
										label.col-md-4.col-form-label.text-md-right(for='account') 
											| Conta
										.col-md-6
											input#password.form-control(type='text', name='account', required='')
									.form-group.row
										label.col-md-4.col-form-label.text-md-right(for='password') 
											| Senha
										.col-md-6
											input#password.form-control(type='password', name='password', required='')
									.col-md-6.offset-md-4
										button.btn.btn-primary(type='submit')
											| Login